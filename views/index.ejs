<%- include('partials/header') -%>

<main class="container">
    <div class="row justify-content-around mt-4">
        <!-- Button trigger modal -->
<button type="button" class="btn btn-outline-success btn-lg col-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Find Your Match
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Find Your Match</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/signup" method="POST">
            Have you ever had a cat?
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                      Yes
                    </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">
                      No
                    </label>
                  </div>
          I'm looking for a cat that gets along with:
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
              Other cats
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
            <label class="form-check-label" for="flexCheckChecked">
              Dogs
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked">
            <label class="form-check-label" for="flexCheckChecked">
              Children
            </label>
          </div>
          
          <label for="customRange3" class="form-label">Cuddliness</label>
<input type="range" class="form-range" min="1" max="5" step="1" id="customRange3">
<div class="mb-3">
  <label for="exampleInputEmail1" class="form-label">Email address</label>
  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
</div>
<div class="mb-3">
  <label for="password" class="form-label">Password</label>
  <input type="password" class="form-control" id="password" name="password">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Next</button>
        </div>
      </div>
    </div>
  </div>
    </div>




    <div class="row justify-content-around">
        <ul class="row list-unstyled text-center">
          <% for(var i=0; i<cats.length; i++) {%>
            <li class="justify-content-between mt-5">
              <a href="/post/<%= cats[i]._id%>">
                <img class="img-fluid" src="<%= cats[i].image%>">
              </a>
            </li>
          <% } %>
          </ul>
      </div>
</main>
    

<%- include('partials/footer') -%>